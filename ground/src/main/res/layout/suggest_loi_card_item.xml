<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/loi_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/job_card_start_end_margin"
    android:layout_marginEnd="@dimen/job_card_start_end_margin"
    android:backgroundTint="?attr/colorSecondaryContainer"
    android:orientation="vertical"
    app:strokeWidth="0dp"
    app:cardCornerRadius="@dimen/job_card_corner_radius"
    app:cardElevation="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/wrapper_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp">
      <TextView
        android:id="@+id/jobName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/JobCardTitle"
        app:layout_constraintBottom_toTopOf="@+id/newSite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Map the terrain" />
      <TextView
        android:id="@+id/newSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_site"
        style="@style/JobCardDescription"
        android:layout_marginTop="@dimen/loi_card_item_margin"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobName"
        app:layout_constraintBottom_toTopOf="@+id/newSiteHintText"
        tools:text="Suggest area of interest" />
      <TextView
        android:id="@+id/newSiteHintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_site_hint_text"
        style="@style/JobCardAdditionalText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newSite"
        app:layout_constraintBottom_toTopOf="@+id/collectData"
        tools:text="Add new site and submit related data" />
      <Button
        android:id="@+id/collectData"
        style="@style/Widget.App.Button.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="@string/collect_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newSiteHintText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>
</layout>
