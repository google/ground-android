<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="viewModel"
      type="com.google.android.ground.ui.editsubmission.MultipleChoiceTaskViewModel" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TaskView"
    android:orientation="vertical">

    <TextView
      style="@style/EditSubmission.Task.Label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{viewModel.taskLabel()}" />

    <com.google.android.ground.ui.editsubmission.MultipleChoiceTaskLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/multiple_choice_input_layout"
        style="@style/EditSubmission.Task.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--
          Using deprecated editable="false" as a hack to reuse TextInputEditText styles for multi-
          select box.
         -->
        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/multiple_choice_input_edit_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:editable="false"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:text="@{viewModel.responseText}"
          android:textColor="@color/task_value"
          app:error="@{viewModel.error}"
          tools:text="One, two, three, four, five" />

      </com.google.android.material.textfield.TextInputLayout>

      <ImageButton
        android:id="@+id/multiple_choice_dropdown_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical|end"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_arrow_drop_down" />

      <View
        android:id="@+id/multiple_choice_tap_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:clickable="true" />

    </com.google.android.ground.ui.editsubmission.MultipleChoiceTaskLayout>
  </LinearLayout>
</layout>