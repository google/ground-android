<resources>

  <style name="AppTheme" parent="AppTheme.Base">
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="fontFamily">@font/text_500</item>
  </style>

  <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
  </style>

  <style name="AppTheme.Base" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- See https://material.io/develop/android/theming/color/ for full list. -->
    <item name="colorPrimary">@color/md_theme_primary</item>
    <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
    <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
    <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>
    <item name="colorSecondary">@color/md_theme_secondary</item>
    <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
    <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
    <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer</item>
    <item name="colorTertiary">@color/md_theme_tertiary</item>
    <item name="colorOnTertiary">@color/md_theme_onTertiary</item>
    <item name="colorTertiaryContainer">@color/md_theme_tertiaryContainer</item>
    <item name="colorOnTertiaryContainer">@color/md_theme_onTertiaryContainer</item>
    <item name="colorError">@color/md_theme_error</item>
    <item name="colorOnError">@color/md_theme_onError</item>
    <item name="colorErrorContainer">@color/md_theme_errorContainer</item>
    <item name="colorOnErrorContainer">@color/md_theme_onErrorContainer</item>
    <item name="colorOutline">@color/md_theme_outline</item>
    <item name="android:colorBackground">@color/md_theme_background</item>
    <item name="colorOnBackground">@color/md_theme_onBackground</item>
    <item name="colorSurface">@color/md_theme_surface</item>
    <item name="colorSurfaceContainer">@color/md_theme_surfaceContainer</item>
    <item name="colorOnSurface">@color/md_theme_onSurface</item>
    <item name="colorSurfaceVariant">@color/md_theme_surfaceVariant</item>
    <item name="colorOnSurfaceVariant">@color/md_theme_onSurfaceVariant</item>
    <item name="colorSurfaceInverse">@color/md_theme_inverseSurface</item>
    <item name="colorOnSurfaceInverse">@color/md_theme_inverseOnSurface</item>
    <item name="colorPrimaryInverse">@color/md_theme_inversePrimary</item>
  </style>

  <style name="AppTitle">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:fontFamily">@font/display_500</item>
    <item name="android:textSize">60sp</item>
    <item name="android:letterSpacing">0.01</item>
  </style>

  <style name="LocationOfInterestDetailsToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="colorControlNormal">?attr/colorSurface</item>
    <item name="android:textColor">?attr/colorOnSurface</item>
  </style>

  <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">?attr/colorOnSurface</item>
    <item name="fontFamily">@font/display_700</item>
    <item name="android:textSize">22sp</item>
  </style>

  <style name="CenteredToolbarTitle">
    <item name="android:textColor">?attr/colorOnSurface</item>
    <item name="android:textSize">22sp</item>
  </style>

  <style name="ToolbarSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="PrimaryToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="android:background">?attr/colorSurface</item>
    <item name="gndToolbarTitleStyle">@style/ToolbarTitle</item>
    <item name="gndToolbarSubtitleStyle">@style/ToolbarSubtitle</item>
    <item name="colorControlNormal">?attr/colorPrimary</item>
  </style>

  <style name="SubmissionListText">
    <item name="android:textSize">@dimen/submission_list_text_size</item>
  </style>

  <style name="SubmissionListText.CreatorName">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="SubmissionListText.Separator">
    <item name="android:textColor">?android:textColorPrimary</item>
  </style>

  <style name="SubmissionListText.Timestamp">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="SubmissionListText.TaskLabel">
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    <item name="android:textSize">@dimen/submission_list_task_label_size</item>
  </style>

  <!--
    NOTE: Most attributes do not work when style is set programmatically, so individual layout
    attributes are set in SubmissionListAdapter instead.
    -->
  <style name="SubmissionListText.Task">
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
  </style>

  <style name="SubmissionDetails.Task.Label" parent="AppTheme.Base">
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    <item name="android:textSize">@dimen/task_label_text_size</item>
  </style>

  <style name="SubmissionDetails.Task.Value" parent="AppTheme.Base">
    <item name="android:textColor">?attr/colorOnSurface</item>
    <item name="android:textSize">@dimen/task_value_text_size</item>
  </style>

  <style name="EditSubmission.Task.Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    <item name="boxStrokeColor">?attr/colorPrimary</item>
  </style>

  <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
    <item name="android:tint">?attr/colorPrimary</item>
    <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
  </style>

  <!-- NavDrawer Header -->
  <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
    <item name="cornerSize">50%</item>
  </style>

  <style name="NavDrawerHeader">
    <item name="android:layout_marginStart">24dp</item>
    <item name="android:layout_marginLeft">24dp</item>
  </style>

  <style name="NavDrawerHeader.Image">
    <item name="android:layout_width">@dimen/nav_drawer_profile_image_size</item>
    <item name="android:layout_height">@dimen/nav_drawer_profile_image_size</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent</item>
  </style>

  <style name="NavDrawerHeader.PrimaryText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    <item name="android:textColor">?attr/colorOnSurface</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="NavDrawerHeader.SecondaryText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">24dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
  </style>

  <style name="TaskChipButton" parent="Widget.MaterialComponents.Chip.Action">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:paddingStart">24dp</item>
    <item name="android:paddingEnd">24dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
  </style>

  <style name="TaskChipButton.DarkGreen">
    <item name="android:backgroundTint">@drawable/task_dark_green_btn_selector</item>
    <item name="android:textColor">@color/task_dark_green_btn_selector</item>
  </style>

  <style name="TaskChipButton.LightGreen">
    <item name="android:backgroundTint">@drawable/task_light_green_btn_selector</item>
    <item name="android:textColor">?attr/colorOnSurface</item>
  </style>

  <style name="TaskChipButton.Transparent">
    <item name="android:backgroundTint">@drawable/task_transparent_btn_selector</item>
    <item name="android:textColor">@color/task_transparent_btn_selector</item>
  </style>

  <style name="TaskChipButton.Transparent.Outline">
    <item name="strokeColor">?attr/colorOutline</item>
    <item name="strokeWidth">2dp</item>
  </style>

  <style name="TaskChipButton.Transparent.TextAndIcon">
    <item name="iconTint">?attr/colorPrimary</item>
  </style>

  <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
    <item name="fontFamily">@font/text_700</item>
  </style>

  <style name="TextAppearance.App.TitleMedium.OnSurfaceContainer">
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
  </style>

  <style name="TextAppearance.App.TitleMedium.OnSurface">
    <item name="android:textColor">?attr/colorOnSurface</item>
  </style>

  <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
    <item name="fontFamily">@font/text_500</item>
  </style>

  <style name="TextAppearance.App.BodySmall.OnSurfaceContainer">
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
  </style>

  <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
    <item name="fontFamily">@font/text_500</item>
  </style>

  <style name="TextAppearance.App.BodyMedium.OnSurface">
    <item name="android:textColor">?attr/colorOnSurface</item>
  </style>

  <style name="Widget.App.Button.IconButton" parent="Widget.Material3.Button.IconButton">
    <item name="iconSize">24sp</item>
    <item name="iconTint">?attr/colorOnSurface</item>
  </style>

  <style name="Widget.App.CardView" parent="Base.Widget.Material3.CardView">
    <item name="cardCornerRadius">12dp</item>
    <item name="strokeWidth">0dp</item>
  </style>

  <style name="Widget.App.CardView.SurfaceContainerLowest">
    <item name="cardBackgroundColor">?attr/colorSurfaceContainerLowest</item>
    <item name="cardElevation">0dp</item>
  </style>

  <style name="JobCardTitle" parent="AppTheme.Base">
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="JobCardDescription" parent="AppTheme.Base">
    <item name="android:textColor">?attr/colorOnSurface</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_marginTop">@dimen/loi_card_item_margin</item>
  </style>

  <style name="JobCardAdditionalText" parent="AppTheme.Base">
    <item name="android:textColor">?attr/colorSecondary</item>
    <item name="android:textSize">12sp</item>
    <item name="android:layout_marginTop">@dimen/loi_card_item_margin</item>
  </style>

  <style name="Widget.App.Button.Inverse" parent="Widget.Material3.Button">
    <item name="android:backgroundTint">?colorPrimaryInverse</item>
    <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
  </style>

  <style name="ChromeStylePopup" parent="android:Widget.TextView">
    <item name="android:gravity">center</item>
    <item name="android:minHeight">50dp</item>
    <item name="android:minWidth">75dp</item>
    <item name="android:maxWidth">150dp</item>
    <item name="android:padding">6dp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
  </style>

  <style name="TextAppearance.App.MapClusterLabel" parent="TextAppearance.Material3.LabelMedium">
    <item name="android:textColor">@color/blackMapOverlay</item>
    <item name="android:fontFamily">@font/text_700</item>
  </style>
</resources>
