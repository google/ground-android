<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
      name="viewModel"
      type="com.google.android.gnd.ui.datacollection.DataCollectionViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.gnd.ui.common.TwoLineToolbar
      android:id="@+id/data_collection_toolbar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:elevation="@dimen/toolbar_elevation"
      android:theme="@style/PrimaryToolbarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="@string/collect_data"
      app:titleTextColor="@color/colorBackground" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
