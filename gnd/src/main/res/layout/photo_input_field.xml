<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <import type="android.view.View" />
    <variable
      name="viewModel"
      type="com.google.android.gnd.ui.editobservation.PhotoFieldViewModel" />
  </data>

  <LinearLayout
    style="@style/FieldView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      style="@style/EditObservation.Field.Label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{viewModel.fieldLabel()}" />

    <include
      layout="@layout/photo_field"
      app:viewModel="@{viewModel}"
      tools:visibility="visible" />

    <Button
      android:id="@+id/btn_select_photo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="@{()-> viewModel.onShowPhotoSelectorDialog()}"
      android:visibility="@{viewModel.isPhotoPresent() ? View.GONE : View.VISIBLE}"
      android:text="@string/add_photo"
      android:textColor="@color/colorAccent"
      style="?attr/materialButtonOutlinedStyle" />

  </LinearLayout>

</layout>