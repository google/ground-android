<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <import type="android.view.View" />
    <variable
      name="editObservationViewModel"
      type="com.google.android.gnd.ui.editobservation.EditObservationViewModel" />
    <variable
      name="viewModel"
      type="com.google.android.gnd.ui.editobservation.PhotoFieldViewModel" />
  </data>

  <LinearLayout
    style="@style/FieldView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      style="@style/EditObservation.Field.Label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{viewModel.fieldLabel()}" />

    <include
      layout="@layout/photo_field"
      app:viewModel="@{viewModel}"
      app:editObservationViewModel="@{editObservationViewModel}"
      tools:visibility="visible" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/btn_select_photo"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()-> viewModel.onShowPhotoSelectorDialog()}"
        android:text="@string/add_photo"
        android:textColor="@color/colorAccent"
        android:visibility="@{viewModel.isPhotoPresent() ? View.GONE : View.VISIBLE}" />

      <!--
      This is used to display validation errors, similar to other input fields.
      -->
      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/photo_validation_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:error="@{viewModel.error}" />

    </LinearLayout>

  </LinearLayout>

</layout>