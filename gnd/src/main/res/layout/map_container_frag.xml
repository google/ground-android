<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
      name="viewModel"
      type="com.google.android.gnd.ui.home.mapcontainer.MapContainerViewModel" />
    <variable
      name="homeScreenViewModel"
      type="com.google.android.gnd.ui.home.HomeScreenViewModel" />
  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Placeholder for map implementation -->
    <FrameLayout
      android:id="@+id/map"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fitsSystemWindows="true">
      <include
        android:id="@+id/map_controls"
        layout="@layout/map_home_layout"
        android:visibility="@{viewModel.mapControlsVisibility}"
        app:homeScreenViewModel="@{homeScreenViewModel}"
        app:viewModel="@{viewModel}" />

      <include
        android:id="@+id/move_feature"
        layout="@layout/map_move_feature_layout"
        android:visibility="@{viewModel.moveFeatureVisibility}"
        app:homeScreenViewModel="@{homeScreenViewModel}"
        app:viewModel="@{viewModel}" />
    </FrameLayout>
  </FrameLayout>
</layout>
