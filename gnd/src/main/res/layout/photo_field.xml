<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <import type="android.view.View" />
    <variable
      name="editObservationViewModel"
      type="com.google.android.gnd.ui.editobservation.EditObservationViewModel" />
    <variable
      name="viewModel"
      type="com.google.android.gnd.ui.editobservation.PhotoFieldViewModel" />
  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/field_value_top_padding"
    android:visibility="@{viewModel.isPhotoPresent() ? View.VISIBLE : View.GONE}">
    <ImageView
      android:id="@+id/image_thumbnail_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:contentDescription="@string/photo_preview"
      android:scaleType="centerCrop"
      app:imageUri="@{viewModel.uri}"
      tools:src="@drawable/splash_background" />
    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|end"
      android:onClick="@{() -> editObservationViewModel.clearPhoto(viewModel.getField().getId())}"
      android:visibility="@{viewModel.isEditable() ? View.VISIBLE : View.GONE}"
      app:backgroundTint="@android:color/transparent"
      app:srcCompat="@drawable/ic_baseline_delete_24"
      app:tint="@color/colorGrey300" />
  </FrameLayout>
</layout>