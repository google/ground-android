<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <import type="android.view.View" />
    <variable
      name="viewModel"
      type="com.google.android.gnd.ui.editobservation.PhotoFieldViewModel" />
  </data>

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/material_card"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:visibility="@{viewModel.isVisible ? View.VISIBLE : View.GONE }"
    app:cardElevation="@dimen/cardview_elevation">
    <ImageView
      android:id="@+id/image_thumbnail_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:contentDescription="@string/photo_preview"
      android:scaleType="fitCenter"
      app:imageUri="@{viewModel.uri}" />
    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|end"
      android:onClick="@{() -> viewModel.clearResponse()}"
      android:visibility="@{viewModel.getClearButtonVisibility()}"
      app:backgroundTint="@android:color/transparent"
      app:srcCompat="@drawable/ic_baseline_delete_24"
      app:tint="@color/colorGrey300" />
  </com.google.android.material.card.MaterialCardView>
</layout>